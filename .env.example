# Polymarket wallet private key (required)
POLY_PRIVATE_KEY=

# Polymarket CLOB API credentials
POLY_API_KEY=
POLY_API_SECRET=
POLY_API_PASSPHRASE=

# Polygon chain ID (default: 137 = mainnet, 80001 = mumbai testnet)
POLY_CHAIN_ID=137

# Ethereum private key for EIP-712 order signing (0x-prefixed hex, required for live trading)
PRIVATE_KEY=

# Derived wallet address (required for live trading)
WALLET_ADDRESS=

# Total USDC bankroll for position sizing (required, must be > 0)
BANKROLL_USDC=100

# Paper trading mode — no real orders placed (default: true)
PAPER_TRADE=true

# Log level: trace, debug, info, warn, error, fatal (default: info)
LOG_LEVEL=info

# Prometheus metrics HTTP port (default: 9090)
METRICS_PORT=9090

# Unix socket path for Go <-> Python gRPC (default: /tmp/polyedge.sock)
GRPC_SOCKET_PATH=/tmp/polyedge.sock

# SOCKS5 proxy for CLOB API (required for geo-restricted regions)
SOCKS_PROXY_URL=

# Market maker toggle (default: true)
MARKET_MAKER_ENABLED=true

# Cashout destination wallet (optional)
CASHOUT_DEST=

# Telegram alerting (optional — used by Alertmanager for notifications)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
