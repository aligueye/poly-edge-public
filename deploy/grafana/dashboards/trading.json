{
  "annotations": { "list": [] },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "links": [],
  "panels": [
    {
      "title": "Realized PnL",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10,
            "stacking": { "mode": "normal" }
          }
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "polyedge_pnl_realized{strategy=\"directional\"}",
          "legendFormat": "Directional",
          "refId": "A"
        },
        {
          "expr": "polyedge_pnl_realized{strategy=\"market_maker\"}",
          "legendFormat": "Market Maker",
          "refId": "B"
        }
      ]
    },
    {
      "title": "Order Latency (p50 / p95 / p99)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": { "drawStyle": "line", "lineWidth": 1, "fillOpacity": 0 }
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, rate(polyedge_order_latency_seconds_bucket[5m]))",
          "legendFormat": "p50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, rate(polyedge_order_latency_seconds_bucket[5m]))",
          "legendFormat": "p95",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, rate(polyedge_order_latency_seconds_bucket[5m]))",
          "legendFormat": "p99",
          "refId": "C"
        }
      ]
    },
    {
      "title": "Fill Rate",
      "type": "gauge",
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "thresholds": {
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 0.3 },
              { "color": "green", "value": 0.6 }
            ]
          }
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "polyedge_fill_rate",
          "legendFormat": "{{ strategy }}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Position Exposure",
      "type": "barchart",
      "gridPos": { "h": 6, "w": 6, "x": 6, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": { "unit": "currencyUSD" },
        "overrides": []
      },
      "targets": [
        {
          "expr": "polyedge_position_exposure",
          "legendFormat": "{{ strategy }} {{ side }}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "WebSocket Status",
      "type": "stat",
      "gridPos": { "h": 6, "w": 6, "x": 12, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "0": { "text": "DOWN", "color": "red" }, "1": { "text": "UP", "color": "green" } } }
          ],
          "thresholds": {
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "polyedge_ws_connected",
          "legendFormat": "{{ source }}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Drawdown",
      "type": "gauge",
      "gridPos": { "h": 6, "w": 3, "x": 18, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 0.1,
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.015 },
              { "color": "red", "value": 0.025 }
            ]
          }
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "polyedge_drawdown_current",
          "legendFormat": "Drawdown",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Bankroll Available",
      "type": "stat",
      "gridPos": { "h": 6, "w": 3, "x": 21, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "thresholds": {
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 200 },
              { "color": "green", "value": 500 }
            ]
          }
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "polyedge_bankroll_available",
          "legendFormat": "Available",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Directional Model Accuracy (Rolling 100)",
      "type": "timeseries",
      "gridPos": { "h": 7, "w": 8, "x": 0, "y": 14 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "custom": { "drawStyle": "line", "lineWidth": 2, "fillOpacity": 5 },
          "thresholds": {
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 0.50 },
              { "color": "green", "value": 0.55 }
            ]
          }
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "polyedge_directional_accuracy",
          "legendFormat": "Accuracy",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Directional Confidence Avg",
      "type": "timeseries",
      "gridPos": { "h": 7, "w": 8, "x": 8, "y": 14 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "custom": { "drawStyle": "line", "lineWidth": 2, "fillOpacity": 10 }
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "polyedge_directional_confidence_avg",
          "legendFormat": "Avg Confidence",
          "refId": "A"
        }
      ]
    },
    {
      "title": "MM Inventory (YES vs NO)",
      "type": "timeseries",
      "gridPos": { "h": 7, "w": 8, "x": 16, "y": 14 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": { "drawStyle": "line", "lineWidth": 2, "fillOpacity": 15 }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "YES" },
            "properties": [{ "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "NO" },
            "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }]
          }
        ]
      },
      "targets": [
        {
          "expr": "polyedge_mm_inventory{side=\"yes\"}",
          "legendFormat": "YES",
          "refId": "A"
        },
        {
          "expr": "polyedge_mm_inventory{side=\"no\"}",
          "legendFormat": "NO",
          "refId": "B"
        }
      ]
    },
    {
      "title": "Orders / Min by Strategy",
      "type": "barchart",
      "gridPos": { "h": 7, "w": 24, "x": 0, "y": 21 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "opm",
          "custom": { "fillOpacity": 80 }
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "rate(polyedge_orders_total[1m]) * 60",
          "legendFormat": "{{ strategy }} {{ side }} {{ status }}",
          "refId": "A"
        }
      ]
    }
  ],
  "schemaVersion": 39,
  "tags": ["trading", "poly-edge"],
  "templating": { "list": [] },
  "time": { "from": "now-1h", "to": "now" },
  "timepicker": {},
  "timezone": "utc",
  "title": "Poly-Edge Trading",
  "uid": "poly-edge-trading",
  "version": 1
}
